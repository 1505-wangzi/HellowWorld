<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <Button
        android:id="@+id/button_1"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:text="0" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_1"
        android:layout_toRightOf="@+id/button_1"
        android:text="." />

    <Button
        android:id="@+id/button_3"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button_2"
        android:text="=" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button_3"
        android:text="+" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_1"
        android:text="1" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_2"
        android:layout_toRightOf="@id/button_5"
        android:text="2" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_3"
        android:layout_toRightOf="@+id/button_2"
        android:text="3" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_4"
        android:layout_toRightOf="@id/button_7"
        android:text="-" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_5"
        android:text="4" />

    <Button
        android:id="@+id/button_10"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_6"
        android:layout_toRightOf="@id/button_9"
        android:text="5" />

    <Button
        android:id="@+id/button_11"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_7"
        android:layout_toRightOf="@id/button_10"
        android:text="6" />

    <Button
        android:id="@+id/button_12"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_8"
        android:layout_toRightOf="@id/button_11"
        android:text="*" />

    <Button
        android:id="@+id/button_13"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_12"
        android:text="7" />

    <Button
        android:id="@+id/button_14"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_10"
        android:layout_toRightOf="@id/button_13"
        android:text="8" />

    <Button
        android:id="@+id/button_15"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_11"
        android:layout_toRightOf="@id/button_14"
        android:text="9" />

    <Button
        android:id="@+id/button_16"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@+id/button_12"
        android:layout_toRightOf="@id/button_15"
        android:text="/" />

    <Button
        android:id="@+id/button_17"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_13"
        android:text="CE" />

    <Button
        android:id="@+id/button_18"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_14"
        android:layout_toRightOf="@id/button_17"
        android:text="C" />

    <Button
        android:id="@+id/button_19"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_14"
        android:layout_toRightOf="@id/button_18"
        android:text="delete" />

    <Button
        android:id="@+id/button_20"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_14"
        android:layout_toRightOf="@id/button_19"
        android:text="Â±" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_above="@+id/button_17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>